@page
@model CRUD_NetCore7_Razor.Pages.Productos.CrearModel
@{
    ViewData["Title"] = "Crear Nuevo Producto";
}

<div class="text-center">
    <h3> Mira nuestros cursos profesionales en <a href="www.google.com" target="_blank"> www.google.com </a></h3>
</div>

<div class="card">

    <div class="card-header bg-dark">
        <h2 class="text-info">Crear un nuevo Producto</h2>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div> @*validacion del lado del servidor *@
            <div class="container" style="padding:30px">
                
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Producto.NombreProducto"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Producto.NombreProducto" class="form-control"/>
                            <span asp-validation-for="Producto.NombreProducto" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Producto.Descripcion"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Producto.Descripcion" class="form-control"/>
                            <span asp-validation-for="Producto.Descripcion" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Producto.EnStock"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Producto.EnStock" class="form-control"/>
                            <span asp-validation-for="Producto.EnStock" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Producto.Precio"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Producto.Precio" class="form-control"/>
                            <span asp-validation-for="Producto.Precio" class="text-danger"></span>
                        </div>
                    </div>
                </div>
               
                <div class="form-group mt-4">
                    <div class="row">
                        <div class="col-sm-2 offset-sm-2">
                            <input type="submit" value="Crear" class="btn btn-primary form-control" />
                        </div>
                        <div class="col-sm-4">
                            <a asp-page="Index" class="btn btn-success form-control">Volver a la lista</a>
                        </div>
                    </div>
                </div>

                
            </div>
        </form>
       
    </div>

</div>